{
  "name": "functions",
  "scripts": {
    "lint": "eslint . --ext .ts --ignore-pattern lib/ --ignore-pattern generated/ --ignore-pattern node_modules/",
    "build": "tsc && cp -r src/communication/assets/. lib/communication/assets && cp -r src/communication/templates/. lib/communication/templates",
    "build:watch": "tsc --watch",
    "serve": "npm run build && firebase emulators:start --only functions",
    "shell": "npm run build && firebase functions:shell",
    "start": "npm run shell",
    "deploy": "firebase deploy --only functions",
    "logs": "firebase functions:log"
  },
  "engines": {
    "node": "22"
  },
  "main": "lib/index.js",
  "dependencies": {
    "exceljs": "^4.4.0",
    "firebase-admin": "^12.6.0",
    "firebase-functions": "^6.0.1",
    "handlebars": "^4.7.8",
    "nodemailer": "^7.0.10",
    "pdfkit": "^0.17.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "eslint": "^8.9.0",
    "eslint-config-google": "^0.14.0",
    "eslint-plugin-import": "^2.25.4",
    "firebase-functions-test": "^3.1.0",
    "typescript": "^5.7.3"
  },
  "private": true
}
